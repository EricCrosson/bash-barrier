#!/usr/bin/env bash
# Written by Eric Crosson
# 2016-10-26
#
# TODO: document

# set -e
# set -x

declare -r default_port=64926
declare -r port=${PORT:-${default_port}}

printHelp() {
    echo "Printing help"
    exit 1
}

listenMode() {
    for i in $(seq 1 $1); do
        nc -l ${port}
    done
}

broadcastMode() {
    for host in "$@"; do
        echo | nc ${host} ${port}
    done
}

main() {
    while true; do
        case "$1" in
            -h|--help) printHelp ;;
            --) shift; break ;;
            *) break ;;
        esac
    done

    if [[ "$#" -eq 0 ]]; then
        listenMode 1
    elif [[ $1 =~ ^-?[0-9]+$ ]]; then
        listenMode $1
    else
        broadcastMode "$@"
    fi
}


main "$@"
